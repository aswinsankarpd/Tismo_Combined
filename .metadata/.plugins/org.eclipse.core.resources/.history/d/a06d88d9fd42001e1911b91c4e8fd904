#include "uart_handler.h"

char Temp_Rx_String[1];

void Rx_UART_Intrpt(){
	HAL_UART_Receive_IT(&huart1, &Temp_Rx_String[0], sizeof(Temp_Rx_String));
}

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart1){
	addtobuffer(&Temp_Rx_String[0]);
}

void Tx_UART_Intrpt(char Tx_String[100]){
	HAL_UART_Receive_IT(&huart1, &Tx_String[0], strlen(Tx_String));
}
